<?xml version="1.0"?>
<ruleset name="CultivateWP Coding Standards">
	<description>Uses WordPress coding standards with minor changes</description>

	<rule ref="WordPress-Core">
		<exclude name="Generic.Arrays.DisallowShortArraySyntax" />
		<exclude name="WordPress.PHP.DisallowShortTernary" />
		<exclude name="WordPress.PHP.YodaConditions" />
		<exclude name="WordPress.Arrays.ArrayDeclarationSpacing" />
		<exclude name="WordPress.WP.EnqueuedResourceParameters.MissingVersion" />
	</rule>

	<rule ref="WordPress.Security.EscapeOutput">
	    <properties>
	        <property name="customAutoEscapedFunctions" type="array" value="mst_icon,mst_mobile_menu_toggle,mst_search_toggle,mst_amp_class,"/>
	    </properties>
	</rule>
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-Extra" />

</ruleset>
